
<h1><%= @list.name %></h1>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><img src="<%= bookmark.movie.poster_url %>" width='300'></li>
    <li class="list-group-item"><%= bookmark.movie.title %></li>
    <li class="list-group-item"><%= bookmark.comment %></li>
          <%= link_to "Remove",
                  bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>
<%= link_to 'Add a movie', new_list_bookmark_path(@list) %>
